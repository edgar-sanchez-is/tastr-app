<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.smileyface.tastr.Activities.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Preferred Zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zipdesc"
            android:layout_above="@+id/zipcode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/zipcode"
            android:textStyle="normal|bold"
            android:editable="true"
            android:numeric="integer"
            android:hint="EX: 76207"
            android:textSize="18sp"
            android:singleLine="true"
            android:maxLength="5"
            android:layout_marginLeft="11dp"
            android:layout_above="@+id/ratingBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="84dp" />

        <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_above="@+id/ratingBar"
            android:layout_alignRight="@+id/zipcode"
            android:layout_alignEnd="@+id/zipcode"
            android:layout_marginBottom="146dp" />

    </LinearLayout>

</RelativeLayout>