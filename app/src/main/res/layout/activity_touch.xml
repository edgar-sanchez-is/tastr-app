<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smileyface.tastr.Activities.TouchActivity">

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/loadingSpinner"
        android:indeterminate="true"
        android:visibility="gone" />

    <ImageView
        android:layout_height="250dp"
        app:srcCompat="@color/common_google_signin_btn_text_dark_default"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/img"
        android:layout_width="300dp"
        android:contentDescription=""
        android:visibility="visible" />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/yuck"
        tools:ignore="ContentDescription"
        android:background="@android:color/holo_red_dark"
        android:layout_height="80dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/yum"
        tools:ignore="ContentDescription"
        android:background="@android:color/holo_green_dark"
        android:layout_width="250dp"
        android:layout_height="80dp"
        tools:layout_editor_absoluteY="491dp"
        tools:layout_editor_absoluteX="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
