<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_touch"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smileyface.tastr.Activities.TouchActivity"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    app:layout_behavior="@string/action_settings">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loadingSpinner"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_weight="1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@color/common_google_signin_btn_text_dark_default"
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:contentDescription=""
        android:visibility="visible"
        android:clickable="true"
        tools:layout_editor_absoluteY="107dp"
        tools:layout_editor_absoluteX="8dp"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:minHeight="250dp"
        android:maxWidth="450dp"
        android:maxHeight="250dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/yuck"
        tools:ignore="ContentDescription"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:maxHeight="50dp"
        android:layout_width="match_parent"
        android:layout_x="61dp"
        android:layout_y="21dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:minWidth="300dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:src="@drawable/yuck"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/yum"
        android:id="@+id/yum"
        tools:ignore="ContentDescription"
        android:background="@android:color/transparent"
        android:maxHeight="50dp"
        android:minHeight="50dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_x="31dp"
        android:layout_y="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:minWidth="320dp"
        android:maxWidth="320dp"
        android:scaleType="fitXY"
        android:src="@drawable/yum"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

</RelativeLayout>
